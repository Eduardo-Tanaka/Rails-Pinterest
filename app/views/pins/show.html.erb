<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= image_tag @pin.asset.url, class: "img-responsive" %>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= @pin.title %>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= @pin.description %>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <ul class="nav navbar-nav">
      <li><a><small>Posted by <%= @pin.user.email %></small></a></li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to "Edit", edit_pin_path(@pin) %></li>
      <li><%= link_to "Delete", @pin, method: :delete, data: { confirm: "Are you sure?" } %></li>
    </ul>
  </div>
</div>
