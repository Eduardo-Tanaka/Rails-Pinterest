<%= form_for @pin do |f| %>
  <div class="row">
    <div class="form-group col-md-6 col-md-offset-3">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-6 col-md-offset-3">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-6 col-md-offset-3">
      <%= f.label :asset %>
      <%= f.file_field :asset %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-6 col-md-offset-3">
      <%= image_tag(@pin.asset_url, class:"img-responsive") if @pin.asset? %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-6 col-md-offset-3">
      <%= f.submit "Save", class: "btn btn-primary form-control" %>
    </div>
  </div>
<% end %>
